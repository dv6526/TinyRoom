<div class="container-xl">
    <div class="page-content pisava">
        <div class="row mt-2 squares-content">
            <div class="col-md-6 col-12 pt-2">
                <div class="svetla robovi square-content center-content map">
                    <canvas id="tinyroom" class="robovi" style="width: 95%; height: 95%;"/>
                </div>
            </div>
            <div class="col-md-6 col-12 pt-2">
                <div class="svetla robovi square-content" id="chat">
                    <div id="messagebox" class="mb-2">
                        <textarea id="message" class="robovi temna pisava" name="message" id="" cols="30"
                            rows="3" placeholder="Enter your message here!"></textarea>
                        <input type="button" class="robovi pisava text-center" id="messagesend" value="Send">
                    </div>
                    <div id="chatlogs" class="robovi temna">
                        <div class="message-bubble">
                            <div class="message-date">14:56</div>
                            <div class="message-sender">Ana</div>: <div class="message-content">To je tekst čez
                                več linij! To je tekst čez več linij! To je tekst čez več linij! To je tekst čez
                                več linij!</div>
                        </div>
                        <div class="message-bubble">
                            <div class="message-date">14:52</div>
                            <div class="message-sender">Ana</div>: <div class="message-content">Ker tisti font
                                na sliki nima š-jev!</div>
                        </div>
                        <div class="message-bubble player">
                            <div class="message-date">14:48</div>
                            <div class="message-sender">Tjasa</div>: <div class="message-content">Zakaj nimam
                                š-ja v imenu?</div>
                        </div>
                        <div class="message-bubble">
                            <div class="message-date">14:40</div>
                            <div class="message-sender">Ana</div>: <div class="message-content">Oi Tjasa! Kako
                                si?</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-12">
                <div class="robovi svetla pisava" id="weather">
                    <div class="row justify-content-md-around justify-content-center flex-wrap">
                        {{#each weather}}
                            <div id="day1" class="pb-3 pt-3 text-center mr-2 ml-2">
                                <div class="pb-2">{{this.day}}</div>
                                <div><i class="fas fa-{{this.type}}" style="font-size:50px"></i></div>
                                <div>{{this.type_string}}</div>
                                <div>{{this.temperature}}</div>
                            </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- PAGE CONTENT ENDS HERE -->